<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
                    <div class="card-body">
                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= render "devise/shared/error_messages", resource: resource %>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                      <%= f.text_field :first_name, id: "inputFirstName", class: "form-control", placeholder: "Enter your first name" %>
                                      <%= f.label :first_name, for: "inputFirstName" %>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                      <%= f.text_field :last_name, id: "inputLastName", class: "form-control", placeholder: "Enter your last name" %>
                                      <%= f.label :last_name, for: "inputLastName" %> 
                                    </div>
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                              <%= f.email_field :email, class: "form-control", id: "inputEmail", autofocus: true, autocomplete: "email", placeholder: "name@example.co" %>
                              <%= f.label :email, for: "inputEmail" %>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                      <% if @minimum_password_length %>
                                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                                      <% end %>
                                      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "inputPassword", placeholder: "Create a password" %>
                                        <%= f.label :password, for: "inputPassword" %>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "inputPasswordConfirm", placeholder: "Confirm password" %>
                                        <%= f.label :password_confirmation, for: "inputPasswordConfirm" %><br />
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4 mb-0">
                                <div class="d-grid">
                                  <%= f.submit "Create Account", class: "btn btn-primary btn-block" %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small">
                          <%- if controller_name != 'sessions' %>
                            <%= link_to "Have an account? Go to login", new_session_path(resource_name) %><br />
                          <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
